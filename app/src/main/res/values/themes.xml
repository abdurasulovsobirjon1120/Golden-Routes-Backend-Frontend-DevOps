<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GoldenRoutes" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/main_background</item>
        <item name="colorSecondaryContainer">@color/main_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.GoldenRoutes.Intro" parent="Base.Theme.GoldenRoutes">
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.GoldenRoutes" parent="Base.Theme.GoldenRoutes" />

    <!-- OnBoarding styles -->
    <style name="OnBoardingTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_xx_large</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="OnBoardingSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/textColorDesc</item>
        <item name="android:textSize">@dimen/text_xx_medium</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="OnBoarding.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/onboarding_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_button_accent</item>
        <item name="android:textSize">@dimen/text_xx_medium</item>
        <item name="android:textColor">@drawable/button_text_color_selector</item>
    </style>

</resources>